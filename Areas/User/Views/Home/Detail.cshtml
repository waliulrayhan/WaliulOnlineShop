@model WaliulOnlineShop.Models.Products
@{
    ViewData["Title"] = "Detail";

}
@using WaliulOnlineShop.Utility
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{

    List<Products> products = HttpContextAccessor.HttpContext.Session.Get<List<Products>>("products");
    Products product = null;
    if (products != null)
    {
        product = products.FirstOrDefault(c => c.Id == Model.Id);
    }

}
<br />

<h2 class="text-info">Product Details</h2>
<form asp-action="Detail" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-12">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-12">
                    <input type="hidden" asp-for="Id" />
                    <input asp-for="Name" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-12">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-12">
                    <input asp-for="Price" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-12">
                    <label asp-for="ProductColor"></label>
                </div>
                <div class="col-12">
                    <input asp-for="ProductColor" readonly="readonly" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="ProductColor" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-12">
                    <label asp-for="ProductTypeId"></label>
                </div>
                <div class="col-12">
                    <input asp-for="ProductTypeId" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="ProductTypeId" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-12">
                    <label asp-for="SpecialTagId"></label>
                </div>
                <div class="col-12">
                    <input asp-for="SpecialTagId" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="SpecialTagId" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-12">
                    <br />
                </div>
                <div class="col-4">
                    @if (Model.IsAvailable)
                    {
                        <img src="~/Images/images.png" width="200px" height="50px" />
                    }
                    else
                    {
                        <img src="~/Images/download.png" width="200px" height="50px" />
                    }
                </div>

            </div>
            <div class="form-group row">
                <div class="col-2">
                    <a asp-action="Index" class="btn btn-success">Back to List</a>
                </div>
                <div class="col-10">
                </div>
            </div>
        </div>
        <div class="col-4">
            <img src="~/@Model.Image" width="100%" height="auto" style="border-radius: 5px;border: 1px solid #efefef" />
            <br />
            <br />
            @if (product != null)
            {
                <button type="submit" class="btn btn-danger form-control" asp-action="Remove" asp-route-id="@Model.Id">Remove to Cart</button>
            }
            else
            {
                <input type="submit" class="btn btn-info form-control" value="Add to Cart" />
            }
        </div>

    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}